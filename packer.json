{
  "variables": {
    "build_number": null,
    "builder": null,
    "commit": null,
    "force_deregister": "false",
    "source_ami": "ami-46c1b650",
    "source_os": "centos-7-1704"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_description": "kubernaut {{ user `source_os` }} (build: {{ user `build_number` }})",
      "ami_name": "kubernaut-b{{ user `build_number` }}",
      "instance_type": "t2.small",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 10,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "force_deregister": "{{ user `force_deregister` }}",
      "region": "us-east-1",
      "run_tags": {
        "Build": "{{ user `build_number` }}",
        "Builder": "{{ user `builder` }}",
        "Commit": "{{ user `commit` }}",
        "Name": "packer-base-b{{ user `build_number` }}",
        "Role": "packer"
      },
      "source_ami": "{{ user `source_ami` }}",
      "ssh_username": "centos",
      "tags": {
        "Build": "{{ user `build_number` }}",
        "Builder": "{{ user `builder` }}",
        "Commit": "{{ user `commit` }}",
        "OS": "{{ user `source_os` }}",
        "Source": "{{ user `source_ami` }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "{{ user `source_os` }}.bash",
      "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'"
    }
  ]
}
